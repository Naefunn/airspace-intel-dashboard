generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Ping {
  id String @id @default(cuid())
  message String 
  createdAt DateTime @default(now())
}

model IngestRun {
  id String @id @default(cuid())
  startedAt DateTime @default(now())
  finishedAt DateTime?
  status IngestStatus @default(RUNNING)
  message String?
}

enum IngestStatus {
  RUNNING 
  SUCCESS 
  FAILED
}
